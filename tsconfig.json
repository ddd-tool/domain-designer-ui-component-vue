{
  "files": [],
  "include": [
    "env.d.ts",
    "lib/*",
    "lib/**/*",
    "src/*",
    "src/**/*",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strict": true,
    "types": [
      "node",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#lib/*": [
        "./lib/*"
      ],
      "#domain/*": [
        "./lib/domain/*"
      ]
    },
  }
}