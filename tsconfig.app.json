{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "global.d.ts",
    "lib/*",
    "lib/**/*",
    "src/**/*",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#lib/*": [
        "./lib/*"
      ],
      "#domain/*": [
        "./lib/domain/*"
      ]
    }
  }
}