{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "lib/*",
    "lib/**/*",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#lib/*": [
        "./lib/*"
      ],
      "#domain/*": [
        "./lib/domain/*"
      ]
    },
    "types": [
      "vite/client"
    ]
  }
}