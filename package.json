  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.10",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "cypress": "^13.17.0",
    "jsdom": "^25.0.1",
    "npm-run-all2": "^7.0.2",
    "read-pkg": "^9.0.1",
    "start-server-and-test": "^2.0.11",
    "typescript": "~5.7.3",
    "vite": "^5.4.14",
