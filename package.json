  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p build:lib && run-p verify && run-p build:sync-file",
    "build:lib": "vite build",
    "build:sync-file": "node ./scripts/build-sync-file.mjs",
    "preview": "vite preview",
